<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="16dp">

    <ImageView
        android:id="@+id/iv_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="난이도"
        app:layout_constraintBottom_toBottomOf="@id/tv_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_spinner" />

    <TextView
        android:id="@+id/tv_spinner"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_spinner"
        android:paddingHorizontal="8dp"
        android:layout_marginStart="4dp"
        android:paddingVertical="4dp"
        android:text="★★★"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tv_level"
        app:layout_constraintTop_toBottomOf="@id/iv_arrow_back" />


    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/spinner_level"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_spinner"
        app:layout_constraintStart_toStartOf="@id/tv_spinner"
        app:layout_constraintTop_toTopOf="@id/tv_spinner"
        app:spinner_arrow_drawable="@drawable/ic_spinner_arrow"
        app:spinner_arrow_tint="@color/black" />

    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="완료한 퀘스트 숨기기"
        app:layout_constraintBottom_toBottomOf="@id/tv_spinner"
        app:layout_constraintEnd_toStartOf="@id/iv_complete"
        app:layout_constraintTop_toTopOf="@id/tv_spinner" />

    <ImageView
        android:id="@+id/iv_complete"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/bg_quest_hide_circle"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_complete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_complete" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rev_quest"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_spinner"
        tools:listitem="@layout/item_quest" />


</androidx.constraintlayout.widget.ConstraintLayout>