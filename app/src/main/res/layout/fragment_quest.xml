<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/background_gradiant_top_to_bottom"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/iv_arrow_back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_back"
                app:tint="@color/main_purple" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar">

        <com.skydoves.powerspinner.PowerSpinnerView
            android:id="@+id/spinner_level"
            style="@style/sans_body_small"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_spinner"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:hint="난이도"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp"
            android:textColorHint="#C8C8C8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:spinner_arrow_drawable="@drawable/ic_spinner_arrow"
            app:spinner_arrow_tint="@color/black"
            app:spinner_divider_color="@color/gray"
            app:spinner_divider_show="true"
            app:spinner_divider_size="1dp"
            app:spinner_item_array="@array/level"
            app:spinner_popup_animation="dropdown"
            app:spinner_popup_background="@drawable/bg_spinner" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrain_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/spinner_level"
            app:layout_constraintBottom_toBottomOf="@id/spinner_level"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_complete"
                style="@style/pixel_body_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="완료한 퀘스트 보기"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_complete"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_complete"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_quest_hide_circle"
                android:clipToOutline="true"
                app:layout_constraintBottom_toBottomOf="@id/tv_complete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_complete" />

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/iv_complete"
                app:layout_constraintEnd_toEndOf="@id/iv_complete"
                app:layout_constraintStart_toStartOf="@id/iv_complete"
                app:layout_constraintTop_toTopOf="@id/iv_complete" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rev_quest"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_level"
            tools:listitem="@layout/item_quest" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>